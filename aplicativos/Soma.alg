algoritmo "Soma"
// Função :
// Autor :
// Data : 23/01/2022
// Seção de Declarações 
var
   num1, num2, soma: inteiro

inicio
// Seção de Comandos
   Escreval("Este programa soma dois numeros")
   Escreva("Digite um número: ")
   leia(num1)
   Escreva("Digite um número: ")
   leia(num2)
   soma <- num1 + num2
   Escreva("A soma de",num1," +",num2," é", soma)
   
fimalgoritmo
