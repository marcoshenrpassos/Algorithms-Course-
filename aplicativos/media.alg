
algoritmo "media"
// Função :
// Autor :
// Data : 23/01/2022
// Seção de Declarações
var
   num1, num2: inteiro
   media: real

inicio
// Seção de Comandos
   Escreval("Este programa soma dois numeros")
   Escreva("Digite um número: ")
   leia(num1)
   Escreva("Digite um número: ")
   leia(num2)
   media <- (num1 + num2) / 2
   Escreva("A soma de",num1," +",num2," é", media)

fimalgoritmo
